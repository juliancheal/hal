var SpeechRecognition = SpeechRecognition || webkitSpeechRecognition
var SpeechGrammarList = SpeechGrammarList || webkitSpeechGrammarList
var SpeechRecognitionEvent = SpeechRecognitionEvent || webkitSpeechRecognitionEvent

var grammar = "<%= Deployment.grammar %>";
var recognition = new SpeechRecognition();
var grammar_list = new SpeechGrammarList();

/*
<%= Deployment.grammar_pretty %>
*/

grammar_list.addFromString(grammar, 1);
recognition.grammars = grammar_list;
recognition.interimResults = true;
recognition.lang = "en-US";
recognition.start();

recognition.onend = function() {
  if (new_command) {
    recognition.stop();
    new_command = false;
  }
  else {
    recognition.start();
  }
}

var listening = false;
var new_command = false;
var start_timeouts = [];

var message_received = function(text, language) {
  var msg = new SpeechSynthesisUtterance(text);
  msg.lang = language;
  window.speechSynthesis.speak(msg);

  msg.onend = function() {
    reset_output();
    recognition.start();
  };
}

var reset_output = function() {
  $("#output").text("");
  $("#output").css("color", "#ebebeb");
}

var show_mic_off = function() {
  $(".mic_off").show();
  $(".mic_hover").hide();
  $(".mic_on").hide();
}

var show_mic_on = function() {
  $(".mic_on").show();
  $(".mic_off").hide();
  $(".mic_hover").hide();
}

var show_mic_hover = function() {
  $(".mic_hover").show();
  $(".mic_on").hide();
  $(".mic_off").hide();
}

var start_listening = function() {
  play_beep();
  listening = true;
  reset_output;
  window.speechSynthesis.cancel();
  show_mic_on();

  id = window.setTimeout(listening_timed_out, 15000);
  start_timeouts.push(id);
}

var listening_timed_out = function() {
  stop_listening();
  play_beep();
  window.setTimeout(play_beep, 100);
}

var stop_listening = function() {
  listening = false;
  $("#output").css("color", "#6f6f6f");
  show_mic_off();
}

function play_beep() {
  var beep = new Audio("data:audio/wav;base64,");
  beep.play();
}

$(document).ready(function() {
  $("#mic").hover(
    function() {
      if (!listening) {
        show_mic_hover();
      }
    },
    function() {
      if (!listening) {
        show_mic_off();
      }
    }
  );

  $("#mic").click(function() {
    if (listening) {
      stop_listening();
      reset_output();
      recognition.abort();
    }
    else {
      start_listening();
    }
  });

  recognition.onresult = function(event) {
    var output = event.results[0][0].transcript
    var done_speaking = event.results[0].isFinal

    if ((output == "how" || output == "pal" || output == "hal" || output == "hell") && done_speaking == true) {
      start_listening();
    }
    else if (listening && done_speaking) {
      new_command = true;
      $("#output").text(output);
      stop_listening();
      App.deployment.deploy(output);
    }
    else if (listening && output != "how") {
      start_timeouts.forEach(function(id){
        window.clearTimeout(id);
      });

      $("#output").text(output);
    }
    else {
      console.log(output);
    }
  }
});
